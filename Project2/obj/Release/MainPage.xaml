<SwapChainBackgroundPanel x:ConnectionId='1' x:Name="swapppy"
    x:Class="Project2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="1280"
    d:DesignHeight="800"                                                                                                                                                                                                 >
    <Border x:Name="menu" HorizontalAlignment="Center" Height="350" Margin="478,229,477,221" VerticalAlignment="Center" Width="325" BorderThickness="2" CornerRadius="20" Visibility="Collapsed" BorderBrush="#99FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="Assets/UI/menuBackground.jpg"/>
        </Border.Background>
        <StackPanel>
            <Button x:ConnectionId='5' x:Name="btnResume" Content="Resume" HorizontalAlignment="Center" VerticalAlignment="Center"                       Width="200" Height="50" Margin="0,50,0,0" Style="{StaticResource MenuButtonStyle}"/>
            <Button x:ConnectionId='6' x:Name="btnSettings" Content="Settings" HorizontalAlignment="Center" VerticalAlignment="Center"                         Width="199" Height="50" Margin="0,10,0,0" Style="{StaticResource MenuButtonStyle}" />
            <Button x:ConnectionId='7' x:Name="btnRestart" Content="Restart" HorizontalAlignment="Center" VerticalAlignment="Center"                        Width="199" Height="50" Margin="57.5,10,57.5,0" Style="{StaticResource MenuButtonStyle}" />
            <Button x:ConnectionId='8' x:Name="btnEndGame" Content="End Game" HorizontalAlignment="Center" VerticalAlignment="Center"                        Width="199" Height="50" Margin="57.5,10,57.5,0" Style="{StaticResource MenuButtonStyle}" />
        </StackPanel>
    </Border>
    <Border x:Name="d_scoreboard" HorizontalAlignment="Center" Height="600" Margin="0,0,0,0" VerticalAlignment="Center" Width="1100" BorderThickness="2" CornerRadius="20" Visibility="Collapsed" BorderBrush="#99FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="Assets/UI/scoreboard_background_d.png"/>
        </Border.Background>
        <StackPanel>
            <TextBlock Text="Score Board" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="30" VerticalAlignment="Center" Margin="8,235,710,20" FontStyle="Italic" FontWeight="Bold" IsColorFontEnabled="True"/>
            <TextBlock x:Name="d_health" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="d_kills" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="d_time" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="d_gamescore" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <Button x:ConnectionId='4' x:Name="d_continue" Content="Continue" HorizontalAlignment="Center" VerticalAlignment="Center"                          Width="180" Height="50" Margin="9,10,710,200" Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>
    </Border>
    <Border x:Name="v_scoreboard" HorizontalAlignment="Center" Height="600" Margin="0,0,0,0" VerticalAlignment="Center" Width="1100" BorderThickness="2" CornerRadius="20" Visibility="Collapsed" BorderBrush="#99FFFFFF">
        <Border.Background>
            <ImageBrush ImageSource="Assets/UI/scoreboard_background_v.png"/>
        </Border.Background>
        <StackPanel>
            <TextBlock Text="Score Board" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="30" VerticalAlignment="Center" Margin="8,235,710,20" FontStyle="Italic" FontWeight="Bold" IsColorFontEnabled="True"/>
            <TextBlock x:Name="v_health" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="v_kills" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="v_time" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <TextBlock x:Name="v_gamescore" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Margin="100,0,710,15"/>
            <Button x:ConnectionId='3' x:Name="v_continue" Content="Continue" HorizontalAlignment="Center" VerticalAlignment="Center"                          Width="180" Height="50" Margin="9,10,710,200" Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>
    </Border>
    <Grid Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='2' x:Name="btnMenu" Content="Menu" HorizontalAlignment="Right" VerticalAlignment="Stretch"                        Style="{StaticResource MenuButtonStyle}" Width="100" Grid.Column="2" Margin="0,0,20,0" />
        <ProgressBar x:Name="lifeBar" HorizontalAlignment="Stretch" Height="50" Margin="0" VerticalAlignment="Top" Background="#7F9B9999" Foreground="#FFFF0404" BorderBrush="Black" Style="{StaticResource LifeBarStyle}" Grid.Column="1" SmallChange="1"/>
        <TextBlock x:Name="txtScore" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="25" VerticalAlignment="Center" Margin="0, 0, 0, 0" FontStyle="Italic" FontWeight="Bold" IsColorFontEnabled="True"/>
    </Grid>
    <Canvas x:Name="control" Margin="50,0,0,50" Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Bottom">
        <Canvas.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/UI/control.png"/>
        </Canvas.Background>
        <Image x:Name="dragger" HorizontalAlignment="Center" Height="100" VerticalAlignment="Center" Width="100" Canvas.Left="100" Canvas.Top="100" Source="Assets/UI/dragger.png"/>
    </Canvas>
    <Canvas x:Name="radar" HorizontalAlignment="Right" Height="300" Margin="0,0,50,50" VerticalAlignment="Bottom" Width="300">
        <Canvas.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Assets/UI/radar.png"/>
        </Canvas.Background>
    </Canvas>
    <ScrollViewer x:Name="scrDebug" HorizontalAlignment="Center" Margin="0,100,900,0" VerticalAlignment="Top" Width="350" Height="300" HorizontalScrollMode="Disabled">
        <TextBlock x:Name="txtDebug" TextWrapping="Wrap" FontSize="14"/>
    </ScrollViewer>
    <TextBlock x:Name="level" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="25" VerticalAlignment="Center" Margin="0, 0, 0, 550" FontStyle="Italic" FontWeight="Bold" IsColorFontEnabled="True" Visibility="Collapsed"/>
</SwapChainBackgroundPanel>

