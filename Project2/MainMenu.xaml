<Page
    x:Class="Project2.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="1280"
    d:DesignHeight="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/UI/mainMenuBackground.png" Stretch="Uniform"/>
        </Grid.Background>
        <Button x:Name="cmdStart" Content="New Game" HorizontalAlignment="Center" Height="77" VerticalAlignment="Bottom" Width="250" Click="StartGame" Margin="514,0,516,58" Style="{StaticResource MenuButtonStyle}" />
        <Button x:Name="cmdInstructions" Content="Instructions" HorizontalAlignment="Center" Height="77" VerticalAlignment="Bottom" Width="250" Click="LoadInstructions" Margin="127,0,903,58" Style="{StaticResource MenuButtonStyle}"/>
        <Button x:Name="cmdSettings" Content="Settings" HorizontalAlignment="Center" Height="77" VerticalAlignment="Bottom" Width="250" Click="OpenSettings" Margin="909,0,121,58" Style="{StaticResource MenuButtonStyle}"/>
        <TextBlock HorizontalAlignment="Center" Margin="459,62,442,0" TextWrapping="Wrap" Text="Tank Battle" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" Foreground="#FFB6B5B5"/>
    </Grid>
</Page>
